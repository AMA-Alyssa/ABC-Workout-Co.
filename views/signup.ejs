
<body>
    <main>
        <div class="container">
            <div class="row">
                <div class = "mx-auto col-10 col-md-8 col-lg-6  ">
                    <form action="/signup" method="POST" class ="entireFormA "  >
                        <h1 class = "signUpPage"> Sign Up</h1>
                        <p class = "signUpPageInstructions"> Sign up with your email address and chosen password.</p>
                        <% if (locals.messages.errors) { %>
                            <% messages.errors.forEach( el => { %>
                                <div class="alert alert-danger"><%= el.msg %></div>
                            <% }) %>    
                        <% } %>
            
            
            
                        <div>
                            <input class="formSignUp" type="text" name="userName" placeholder="User Name">
                        </div>
                        <div >
                            <input class="formSignUp" type="email" name="email" placeholder="Email">
                        </div>
                        <div >
                            <input class="formSignUp" type="password" name="password" placeholder="Password">
                        </div>
                        <div >
                            <input class="formSignUp confirmPassword" type="password" name="confirmPassword" placeholder="Confirm Password">
                        </div>
                        <div >
                            <input class ='signUpButton' type="submit">
                        </div>
                    </form>   
                </div>
            </div>
        </div>
    </main>
</body> 

